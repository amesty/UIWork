<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_bg">
    <TextView
            android:id="@+id/tv_title"
            android:layout_height="36dip"
            android:layout_width="300dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#7e7e7e"
            android:text="请选择"
            android:background="@drawable/popup_titlebar"/>
    <TextView
            android:id="@+id/tv_take_photo"
            android:layout_height="50dip"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/common_tab_bg"
            android:text="拍照"
            android:textSize="18sp"
            android:textColor="#FF484848"/>
    <TextView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFB8B8B8"/>

    <TextView
            android:gravity="center"
            android:id="@+id/tv_pick_photo"
            android:layout_height="50dip"
            android:layout_width="match_parent"
            android:background="@drawable/common_tab_bg"
            android:text="相册"
            android:textSize="18sp"
            android:textColor="#FF484848"/>

    <TextView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#FFB8B8B8"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">
        <Button
                android:id="@+id/btn_quxiao"
                android:layout_width="240dip"
                android:layout_height="42dip"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_style_alert_dialog_special"
                android:text="取消"/>
        </LinearLayout>

</LinearLayout>