<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <com.example.fragment.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.example.fragment.TitleLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tabcolor">
        
        <TextView 
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="选择问题类别"
            android:layout_marginLeft="5dp"
            android:textColor="@color/button_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        
        <ImageButton
            android:id="@+id/choose_category"
            android:layout_marginTop="4dp"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/down_arrow"/>
        
    </RelativeLayout>
    
    <EditText 
        style="?android:attr/textViewStyle"
        android:id="@+id/question_et"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="16sp"
        android:hint="   为了让您的问题得到更好的解答，请详细写出您的问题和感受。"
        android:background="@null"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian_yanse" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/tabcolor">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="匿名发表" 
        	android:textSize="16sp"
        	android:layout_marginTop="5dp"
        	android:layout_gravity="center_vertical"
        	android:layout_marginLeft="8dp"
        	android:textColor="@color/button_gray"/>

    	<ToggleButton
    	    android:id="@+id/isAnonymous_tb"
    	    android:layout_width="wrap_content"
    	    android:layout_height="30dp"
    	    android:layout_marginLeft="230dp"
    	    android:layout_marginTop="8dp"
    	    android:background="@android:color/transparent"
    	    android:button="@drawable/toggle_btn"
    	    android:checked="false"
    	    android:text=""
    	    android:textOff=""
    	    android:textOn="" />
    	
    	</LinearLayout>
    	</LinearLayout>

</LinearLayout>
