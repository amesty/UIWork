<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/iv_user_photo"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/touxiang"/>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
            
            <TextView 
            	android:id="@+id/tv_user_name"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textColor="@color/sen_lan"
            	android:text="xxx"
            	android:textSize="15sp"
            	android:layout_marginTop="5dp"
            	android:layout_gravity="center_vertical"/>
            
            <TextView 
            	android:id="@+id/time_tv"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:textColor="@color/time_hui"
            	android:textSize="10sp"
            	android:text="mm-dd hh:mm"
            	android:paddingTop="5dp"/>
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/goodcount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bbbbbb"
            android:textSize="13sp"
            android:paddingTop="7dp"
            android:text="0"/>
        
        <ImageView
            android:id="@+id/good_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="3dp"
            android:src="@drawable/good_selector"/>
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="content"
        android:textSize="15sp"
        android:textColor="@color/zitiyanse_hui"
        android:layout_marginLeft="38dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView 
        android:id="@+id/tv_user_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:paddingRight="10dp"
        android:text="回复"
        android:textColor="@color/blue"
        android:textSize="14sp" />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@color/yollow" >

   		<com.example.HelpClass.MyListView
   		    android:id="@+id/lv_user_comment_replys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:background="@color/xian_yanse"/>

</LinearLayout>
