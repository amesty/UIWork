<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff" >
    
    <com.example.fragment.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.example.fragment.TitleLayout>
    
    <include layout="@layout/dialog_sousuokuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian_yanse"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按条件查找咨询师"
        android:textSize="16sp"
        android:textColor="#afafaf"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />
    
    <LinearLayout
        android:id="@+id/shanchang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="13dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="擅长"
            android:textColor="#555555"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/shanchangTextview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="请选择"
            android:textColor="#9a9a9a"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xuanzejiantou" />
    </LinearLayout>
    
     <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
     
     <LinearLayout 
        android:id="@+id/diqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textSize="17sp"
            android:textColor="#555555"
            android:layout_marginLeft="12dp"/>
        
        <TextView 
            android:id="@+id/diquTextview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="请选择"
            android:textSize="17sp"
            android:textColor="#9a9a9a"
            android:layout_marginLeft="240dp"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xuanzejiantou"
            android:layout_marginBottom="10dp"/>
        
    </LinearLayout>
    
    
     <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
     
     
    
    <Button 
        android:id="@+id/ok"
        android:background="@drawable/quedingjian_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="确定"
        android:textColor="#ffff"
        android:textSize="15sp"/>
    
    
   

</LinearLayout>
