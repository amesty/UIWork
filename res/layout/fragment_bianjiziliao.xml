<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ziliao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qianhui"
    android:orientation="vertical" >
    

     <com.example.fragment.TitleLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     ></com.example.fragment.TitleLayout>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dip"
         android:orientation="vertical"
         android:background="#FFFFFF">
         
         <RelativeLayout
             android:id="@+id/personal_touxiang"
	         android:layout_width="match_parent"
	         android:layout_height="80dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:clickable="true"
	         android:background="@drawable/common_list_bg">

	          <ImageView
	              android:id="@+id/ziliao_photo"
	              android:layout_width="50dip"
	              android:layout_height="50dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="15dp"
	              android:src="@drawable/touxiang" />

	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="10dp"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:text="@string/touxiang"
	              android:textColor="@color/zitiyanse_hui"
	              android:textSize="18sp" />

	      </RelativeLayout>
	      
          <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf"
          />
          
          <RelativeLayout
              android:id="@+id/personal_name"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/common_list_bg"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="@string/name"
                  android:textColor="@color/zitiyanse_hui"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:clickable="true"
                  android:layout_marginRight="15dp"
                  android:text="username"
                  android:textSize="18sp"
                  android:textColor="@color/gray" />
          </RelativeLayout>

            <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf"
          />
            <RelativeLayout
              android:id="@+id/personal_sex"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/common_list_bg"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="@string/sex"
                  android:textColor="@color/zitiyanse_hui"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_usersex"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView2"
                  android:layout_alignBottom="@+id/textView2"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="15dp"
                  android:textSize="18sp"
                  android:textColor="@color/gray" />
          </RelativeLayout>
        </LinearLayout>
        <LinearLayout 
             android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="15dip"
	         android:orientation="vertical"
	         android:background="#FFFFFF">
            
            <RelativeLayout
              android:id="@+id/personal_city"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/common_list_bg"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="@string/city"
                  android:textColor="@color/zitiyanse_hui"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_usercity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView4"
                  android:layout_alignBottom="@+id/textView4"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="15dp"
                  android:text="北京"
                  android:textSize="18sp"
                  android:textColor="@color/gray" />
          </RelativeLayout>
          
           <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf"
          />
            <RelativeLayout
              android:id="@+id/personal_introduction"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/common_list_bg"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="@string/introduction"
                  android:textColor="@color/zitiyanse_hui"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_userintroduction"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView5"
                  android:layout_alignBottom="@+id/textView5"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="15dp"
                  android:text=" "
                  android:textSize="18sp"
                  android:textColor="@color/gray" />
          </RelativeLayout>
     </LinearLayout>
</LinearLayout>
