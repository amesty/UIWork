<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white" >
    
    <ImageView
        android:id="@+id/item_test_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FFFF00"
        android:scaleType="centerCrop"
        android:src="@drawable/example" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/item_test_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="住宅小区"
            android:textColor="@color/zitiyanse_hui"
            android:textSize="18sp" 
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="15dp">
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lookcount"/>
            
            <TextView
            	android:id="@+id/item_test_lookcount"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="1256"
            	android:layout_marginLeft="5dp"
            	android:layout_marginTop="9dp"
            	android:textColor="@color/senhui"
            	android:textSize="14sp" />
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/commentcount"/>
            
            <TextView
            	android:id="@+id/item_test_commentcount"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="126"
            	android:layout_marginLeft="5dp"
            	android:layout_marginTop="9dp"
            	android:textColor="@color/senhui"
            	android:textSize="14sp" />
            
        </LinearLayout>
 
    </LinearLayout>
    

</LinearLayout>
