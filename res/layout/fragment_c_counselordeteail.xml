<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianhui" >
    
    <com.example.fragment.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.example.fragment.TitleLayout>
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/title_xian" />
        <LinearLayout
	        android:id="@+id/tabcontent_c_detail"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="vertical" >
  
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="90dp"
	        android:layout_marginTop="15dp"
	        android:background="@color/white"
	        android:orientation="horizontal">
	        
	        <ImageView 
	        android:id="@+id/counselor_pic"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/touxiang_moren"/>
	        
	        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	            
	        <TextView
	            android:id="@+id/tv_counselor_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginLeft="10dp"
	            android:text="counselorName"
	            android:textSize="20sp"
	             >
	        </TextView>
	        <TextView
	            android:id="@+id/tv_counselor_motto"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="counselorMotto"
	            android:textSize="15sp"
	            android:textColor="@color/zitiyanse_hui"
	             >
	        </TextView>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_marginTop="15dp"
	        android:background="@color/white"
	        android:orientation="vertical">
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="5dp"
	                android:layout_width="10dp"
	                android:layout_height="15dp"
	                android:src="@drawable/yansetiao_blue" />
	            <TextView
	                android:id="@+id/tv_person_zizhi_tab"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_marginLeft="5dp"
	                android:text="从业资质"
	                android:textSize="16sp"/>
	        </LinearLayout>
	        
	         <TextView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="15dp"
	            android:background="@color/xian_yanse" />
	         <TextView 
	             android:id="@+id/counselor_rank"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="15dp"
	             android:layout_marginTop="10dp"
	             android:text="国家二级咨询师"
	             android:textSize="16sp"/>
	    </LinearLayout>
	     
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="150dp"
	        android:layout_marginTop="15dp"
	        android:background="@color/white"
	        android:orientation="vertical">
	
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="5dp"
	                android:layout_width="10dp"
	                android:layout_height="15dp"
	                android:src="@drawable/yansetiao_blue" />
	            <TextView
	                android:id="@+id/tv_counselor_intro_tab"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_marginLeft="5dp"
	                android:text="个人简介"
	                android:textSize="16sp"/>
	        </LinearLayout>
	        
	         <TextView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="15dp"
	            android:background="@color/xian_yanse" />
	         <TextView 
	             android:id="@+id/couselor_intro"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="15dp"
	             android:layout_marginTop="10dp"
	             android:text="从事心力咨询工作10年，在2009年获得国家二级心理咨询师，开展心理咨询工作以来积累大量心理咨询经验，擅长恋爱婚姻问题和个人成长问题。我愿意陪伴你成为更好的自己！"
	             android:textSize="16sp"
	             android:textColor="@color/zitiyanse_hui"/>
	    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">
         
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/yansetiao_blue" />
            <TextView
                android:id="@+id/tv_person_background_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="从业背景和经验"
                android:textSize="16sp"/>
        </LinearLayout>
        
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/xian_yanse" />
        
         <TextView 
            android:id="@+id/counselor_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="2010-2014：四川师范大学；2014-2016：心悦科技发展有限公司"
            android:textSize="16sp"
            android:textColor="@color/zitiyanse_hui"/>
         
    </LinearLayout>
  </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1px" 
            android:background="@color/xian_yanse" />
    
    <LinearLayout 
    	    android:id="@+id/tab_bar_c_detail"
    	    android:background="@color/tabcolor"
    	    android:layout_width="match_parent"
    	    android:layout_height="50dp"
    	    android:orientation="horizontal"
    	    android:baselineAligned="false">
    	    
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:clickable="true">
            
                <RelativeLayout 
                    android:id="@+id/btn_guanzhu_counselor"
                    android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:clickable="true" 
		            android:background="@drawable/common_list_bg"
		            android:gravity="center">
                    <ImageView 
                        android:id="@+id/image_guanzhu"
                        android:layout_height="30dip"
                        android:layout_width="30dip"
                        android:src="@drawable/icon_guanzhu"
                        />
                    <TextView
                        android:layout_toRightOf="@id/image_guanzhu"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="关注"
                        android:gravity="center"
                        android:textSize="15sp"/>
                </RelativeLayout>
                
                <TextView
		            android:layout_width="1px"
		            android:layout_height="50px"
		            android:gravity="center"
		            android:layout_marginTop="10dip"
		            android:background="@color/xian_yanse" />
                
                <RelativeLayout 
                    android:id="@+id/btn_sixin_counselor"
                    android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:clickable="true"
		            android:background="@drawable/common_list_bg"
		            android:gravity="center">
                    <ImageView 
                        android:id="@+id/image_sixin"
                        android:layout_height="30dip"
                        android:layout_width="30dip"
                        android:src="@drawable/icon_sixin"
                        />
                    <TextView
                        android:layout_toRightOf="@id/image_sixin"
                        android:layout_marginRight="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="私信"
                        android:gravity="center"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
     
       
        <RelativeLayout
            android:id="@+id/btn_yuyue_counselor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickTab">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立刻预约"
                android:textSize="18sp"
                android:background="@drawable/button_blue_selector"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>