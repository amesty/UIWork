<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
    
    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:background="@drawable/title_bg"
        	android:layout_height="wrap_content" >
        
        <Button
        	android:id="@+id/btn_own"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:background="@drawable/own_bg"
        	android:layout_marginTop="5dp"
        	android:layout_marginLeft="3dp" />
    
    	<TextView 
        	android:id="@+id/tv_title"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center"
        	android:textSize="18sp"
        	android:text="标题"
        	android:textColor="#ffff"
        	android:gravity="center" />
    
    	<Button
        	android:id="@+id/btn_search"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:background="@drawable/search_bg"
        	android:layout_marginTop="5dp" />
    </LinearLayout>
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/title_xian" />
    	
    <FrameLayout
            android:id="@+id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    	
    	<TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/xian_yanse" />
    	
    	<LinearLayout 
    	    android:id="@+id/tab_bar"
    	    android:background="@color/tabcolor"
    	    android:layout_width="match_parent"
    	    android:layout_height="60dp"
    	    android:orientation="horizontal"
    	    android:baselineAligned="false">
    	
    	    <RelativeLayout
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickTab"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp" >
                
    	        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >
    	        
    	        <ImageView 
    	            android:layout_width="match_parent"
    	        	android:layout_height="39dp"
    	        	android:scaleType="centerInside"
    	        	android:background="@drawable/zixun_selector"/>
    	        
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:text="咨询"
    	            android:textSize="12sp"
    	            android:textColor="@color/main_button_title_color"/>
    	        
    	    </LinearLayout>
    	    </RelativeLayout>
    
    	    
    	    <RelativeLayout
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickTab"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp" >
                
    	        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >
    	        
    	        <ImageView 
    	            android:layout_width="match_parent"
    	        	android:layout_height="39dp"
    	        	android:background="@drawable/wenda_selector"/>
    	        
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:text="问答"
    	            android:textSize="12sp"
    	            android:textColor="@color/main_button_title_color"/>
    	        
    	    </LinearLayout>
    	    </RelativeLayout>
    	    
    	    <RelativeLayout
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickTab"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp" >
                
    	        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >
    	        
    	        <ImageView 
    	            android:layout_width="match_parent"
    	        	android:layout_height="39dp"
    	        	android:background="@drawable/yuedu_selector"/>
    	        
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:text="阅读"
    	            android:textSize="12sp"
    	            android:textColor="@color/main_button_title_color"/>
    	        
    	    </LinearLayout>
    	    </RelativeLayout>
    	    
    	     
    	    <RelativeLayout
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickTab"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp" >
                
    	        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >
    	        
    	        <ImageView 
    	            android:layout_width="match_parent"
    	        	android:layout_height="39dp"
    	        	android:background="@drawable/test_selector"/>
    	        
    	        <TextView 
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:text="测试"
    	            android:textSize="12sp"
    	            android:textColor="@color/main_button_title_color"/>
    	        
    	    </LinearLayout>
    	    </RelativeLayout>
        	
    	</LinearLayout>
    
	</LinearLayout>
	
	<FrameLayout
        android:id="@+id/full_screen_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
    
      