<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:fillViewport="true">
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    
    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
        	<ImageView 
            	android:id="@+id/ziwochengzhang"
            	android:layout_width="50dp"
            	android:layout_height="50dp"
            	android:layout_weight="1"
            	android:src="@drawable/ziwochengzhang"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/qingxuguanli"
            	android:layout_width="50dp"
            	android:layout_height="50dp"
            	android:src="@drawable/qingxuguanli"
            	android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/renjigoutong"
            	android:layout_width="50dp"
            	android:layout_height="50dp"
            	android:src="@drawable/renjigoutong"
            	android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/lianaihunyin"
            	android:layout_width="50dp"
            	android:layout_height="50dp"
            	android:src="@drawable/lianaihunyin"
            	android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
    	</LinearLayout>

    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:text="自我成长"
        	android:textColor="@color/senhui"
        	android:layout_marginLeft="20dp"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text=" 情绪管理"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text="  人际沟通"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text="    恋爱婚姻"/>
        
        
    	</LinearLayout>
    
    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
        
        	<ImageView 
            	android:id="@+id/zhichangwenti"
            	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:layout_weight="1"
            	android:src="@drawable/zhichangwenti"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/qinzijiating"
            	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:src="@drawable/qinzijiating"
           		android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/xinlizhangai"
            	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:src="@drawable/xinlizhangai"
            	android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
        	<ImageView 
            	android:id="@+id/xuexikunrao"
            	android:layout_width="0dp"
            	android:layout_height="50dp"
            	android:src="@drawable/xueyekunrao"
            	android:layout_weight="1"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp" />
        
    	</LinearLayout>

    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text="职场问题"
        	android:layout_marginLeft="20dp"
        	android:layout_marginBottom="10dp"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
       	 	android:textSize="13sp"
       	 	android:textColor="@color/senhui"
       	    android:text=" 亲子家庭"
        	android:layout_marginBottom="10dp"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text="  心理障碍"
        	android:layout_marginBottom="10dp"/>
        
        	<TextView 
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="13sp"
        	android:textColor="@color/senhui"
        	android:text="    学习困扰"
        	android:layout_marginBottom="10dp"/>
        
        
    	</LinearLayout>

    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="15dp" 
        	android:background="@color/qianhui" >
    	</LinearLayout>
    	
    	<LinearLayout 
        	android:layout_width="match_parent"
        	android:layout_height="30dp"
        	android:orientation="horizontal"
        	android:layout_marginTop="10dp">
        
        	<ImageView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/yansetiao_red"/>
        
        	<TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="活跃咨询师推荐"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center_vertical"
            	android:textColor="@color/senhui"
            	android:textSize="13sp"/>
    	</LinearLayout>
    	
    	<ListView
        	android:id="@+id/best_counselor_lv"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:listSelector="#00000000"
        	android:cacheColorHint="#00000000"
        	android:divider="@color/xian_yanse"
        	android:dividerHeight="1px"
        	android:scrollbars="@null"  >
    	</ListView>
    	
    	</LinearLayout>
	</ScrollView>

</LinearLayout>
