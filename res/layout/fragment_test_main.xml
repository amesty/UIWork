<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <TextView 
        android:text="测一测与你匹配的咨询师"
        android:textColor="@color/senhui"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qianhui"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:text="请根据近一个月内你的感受及行为简单回答8个问题，我们将会为你匹配适合你的咨询师。"
        android:textSize="16sp"
        android:textColor="@color/senhui"/>
    
    <Button 
        android:id="@+id/start_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始匹配"
        android:textColor="@color/white"
        android:background="@drawable/pipeijian_shape"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" 
        android:background="@color/qianhui" >
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yansetiao_red"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他热门测试"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#454545"
            android:textSize="18sp"/>
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        
        <Button 
        	android:id="@+id/zhuanyeceshi"
        	android:background="@drawable/zhuanyeceshi"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"/>
        
        <Button 
        	android:id="@+id/xinggeceshi"
        	android:background="@drawable/xinggeceshi"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"/>
        
        <Button 
        	android:id="@+id/aiqingceshi"
        	android:background="@drawable/aiqingceshi"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"/>
        
    </LinearLayout>
    

</LinearLayout>
